<div class="row-fluid event">
  <div class="span12">
    <div class="row-fluid">
      <div class="span12">
        <h1><%= link_to @event.name, @event, :class => 'title' %></h2>
        <p><small>
          <%= l(@event.start_at, :format => :long) %> 
          to
          <%= l(@event.end_at, :format => :long) %> 
        </small></p>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <%= raw @event.description %>
        <% if can? :manage, Event %>
          <p>
            <%= link_to "Edit", edit_event_path(@event), :class => 'btn' %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <h2 class="subtitle">When &amp; Where</h2>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <h3><%= @event.venue.name %></h3>
        <p><%= simple_format @event.venue.address %></p>
        <p>
          <%= l(@event.start_at, :format => :long) %> 
          to
          <%= l(@event.end_at, :format => :long) %> 
        </p>
      </div>
      <div class="span6">
        <%= gmaps("markers" => {"data" => @gmap_json}, "map_options" => {"processing" => "json", "auto_zoom" => false, "zoom" => 14}) %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <h2 class="subtitle">Speakers</h2>
        <p>Speaker stuff goes here</p>
      </div>
      <div class="span6">
        <h2 class="subtitle">Schedule</h2>
        <%= raw @event.schedule %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <h2 class="subtitle">Rules</h2>
        <%= raw @event.rules %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <h2 class="subtitle">Registration</h2>
        <%= raw @event.registration %>
      </div>
    </div>
    <hr>
    <%= render "shared/social_sharing" %>
    <div id="disqus_thread"></div>
  </div>
</div>

<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'devconphbeta'; // required: replace example with your forum shortname

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
