<%= simple_form_for(@speaker) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <%= f.input :name %>
  <% unless @speaker.new_record? %>
    <%= f.input :slug %>
  <% end %>
  <%= f.input :description, :as => :ckeditor, :input_html => { :toolbar => 'Full' } %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-large btn-primary' %>
  </div>
<% end %>
