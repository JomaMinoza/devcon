<%= simple_form_for(@article) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <%= f.input :title %>
  <%= f.input :content,
              :as => :ckeditor %>
  <%= f.association :categories, :as => :check_boxes %>

  <div class="form-actions">
    <%= f.button :submit,
                 :class => 'btn btn-large btn-primary' %>
  </div>
<% end %>