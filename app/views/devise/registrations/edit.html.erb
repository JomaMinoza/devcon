<% provide(:title, 'Account Settings') %>
<h1>Edit <%= resource_name.to_s.humanize %></h1>
<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :email, :hint => 'Enter your email address' %>
    <%= f.input :password, :hint => "Enter new password (leave blank if you don't want to change it)" %>
    <%= f.input :password_confirmation, :hint => 'Confirm new password' %>
    <%= f.input :current_password, :hint => 'Enter current password' %>
  <% end %>
  <%= f.actions do %>
    <%= f.action(:submit, :label => 'Update account') %>
  <% end %>
<% end %>
<h2>Cancel my account</h2>
<p>Unhappy? <%= link_to 'Cancel my account', registration_path(resource_name), :confirm => 'Are you sure?', :method => :delete %>.</p>
<%= link_to 'Back', :back %>