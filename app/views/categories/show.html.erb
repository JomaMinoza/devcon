<% provide(:title, @category.name) %>
<h1><%= @category.name %></h1>
<b>Description:</b>
<% if @category.description.blank? %>
  <p>There is no description provided.</p>
<% else %>
  <p><%= @category.description %></p>
<% end %>
<% if user_signed_in? %>
  <%= link_to 'Edit category', edit_category_path(@category) %>
  <%= link_to 'Delete category', category_path(@category), :confirm => 'Are you sure?', :method => :delete %>
<% end %>
<h2>Articles under <%= @category.name %></h2>
<ul>
  <% @category.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>
