      <div class="col-sm-6">
        <%= image_tag "faq/bai-fzda.jpg", :alt => "DevCon Bai at hack2HATCH" %>
      </div>
      <div class="col-sm-6">
        <%= image_tag "faq/davao-um.jpg", :alt => "DevCon Davao at UM" %>
      </div>
    </div>
